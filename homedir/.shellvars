# Set vim as default editor (vi is the default otherwise)
export EDITOR="vim"
bindkey -v

export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8

export JAVA8_HOME=`/usr/libexec/java_home -v1.8.0`
export JAVA11_HOME=`/usr/libexec/java_home -v11`
export JAVA21_HOME=`/usr/libexec/java_home -v21`
export JAVA17_HOME=`/usr/libexec/java_home -v17`

export JAVA_HOME=$JAVA17_HOME

export MAVEN_OPTS="-Dfile.encoding=UTF-8 -Xms128m -Xmx512m"
export ANDROID_HOME="/Users/zhangxh/Library/Android/sdk"
export ANDROID_NDK="/Users/zhangxh/Library/Android/ndk"

export KAFKA_HOME="/Users/zhangxh/Applications/confluent-4.1.2"

export GROOVY_HOME=/usr/local/opt/groovy/libexec
export GRAILS_HOME=/usr/local/opt/grails/libexec
export GRADLE_HOME=/usr/local/opt/gradle/libexec

export REACT_EDITOR=vscode


#########################################################################
# Tool settings
#########################################################################
export FONTCONFIG_PATH=/opt/X11/lib/X11/fontconfig
export NVM_DIR=~/.nvm

export HOMEBREW_NO_AUTO_UPDATE=1
export HOMEBREW_NO_INSTALL_CLEANUP=1

export GOPATH=$HOME/Documents/Development/go

export NODEJS_ORG_MIRROR=https://npm.taobao.org/mirrors/node/
export SASS_BINARY_SITE=https://npm.taobao.org/mirrors/node-sass/

